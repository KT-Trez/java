<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- db properties -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/java-qa</property>
        <property name="hibernate.connection.autocommit">true</property>

        <!-- probably ENV should be used for this, but whatever -.- -->
        <property name="hibernate.connection.username">admin</property>
        <property name="hibernate.connection.password">zaq1@WSX</property>

        <!-- hibernate config -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <property name="hbm2ddl.auto">create-drop</property> <!-- drop and re-create the database schema on startup -->

        <!-- map classes to tables -->
        <mapping class="org.was.Rectangle"/>
        <mapping class="org.was.Triangle"/>
    </session-factory>
</hibernate-configuration>